<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://fonts.googleapis.com/css?family=Nunito+Sans:300i,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.1.js"
        integrity="sha256-3zlB5s2uwoUzrXK3BT7AX3FyvojsraNFxCc2vC/7pNI=" crossorigin="anonymous"></script>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat&display=swap" rel="stylesheet">

    <script src="https://code.jquery.com/jquery-3.6.2.js"
        integrity="sha256-pkn2CUZmheSeyssYw3vMp1+xyub4m+e+QK4sQskvuo4=" crossorigin="anonymous"></script>
    <script src="https://kit.fontawesome.com/0bd7fd1f80.js" crossorigin="anonymous"></script>

    <link rel="stylesheet" href="/CSS/faculty/faculty.css">
    <link rel="stylesheet" href="/CSS/admin/addStudent.css">

    <link rel="stylesheet" href="/CSS/admin/admin.css">



    <title>Student Registration Form In Bootstrap 5 </title>

</head>

<body style="background-color: rgb(221, 221, 221);">



    <div class="container-dashboard">
        <div class="navbar-dashboard-for-student" style="z-index: 1;">
            <div class="bars" onclick="myFunction(this)">
                <div class="bar1"></div>
                <div class="bar2"></div>
                <div class="bar3"></div>
            </div>
            <!-- <i class="fa-solid fa-bars fs-1x" onclick="myFunction()"></i> -->
            <div class="navbar-text-for-student">
                Attendance Management System

            </div>

        </div>
        <div class="left-bar-for-student" style="font-family: sans-serif;">
            <div class="left-bar-title" style="height: 97px; padding-top: 10px;">
                <div class="image-logo">
                    <img src="/images/logo.png" alt="" srcset="">

                </div>
                <div class="gecm-title" style="padding-top: 10px; font-size: 2.5rem; text-align: center;">
                    GECM
                </div>
            </div>
            <!-- <hr> -->
            <a href="/facultyHome" style="padding: 10px 20px;">
                <i class="fa-solid fa-gauge fs-1x fa-fw"></i><span class="link-text">Home</span></a>
            <a href="/selectClass"><i class="fa-solid fa-list-check fs-1x fa-fw"></i><span class="link-text">Take
                    Attendance</span></a>
            <a href=""><i class="fa-regular fa-calendar-days fs-1x fa-fw"></i><span class="link-text">View
                    Attendance</span></a>
            <a href=""><i class="fa-solid fa-book fs-1x fa-fw"></i><span class="link-text">Student Report</span></a>



        </div>
        <div class="right-side">


            <div class="card">
                <div class="card-header" style="font-weight: bold;">
                    Mark Attendance
                </div>
                <div class="card-body">
                    <h6 class="card-title">SELECT CLASS</h6>
                    <p class="card-text">Date</p>
                    <div class="md-form md-outline input-with-post-icon datepicker" id="customDays">
                        <input placeholder="Select date" type="date" id="Customization" class="form-control">

                    </div>
                    <p class="form-select-title">Select Your Relevent Class</p>
                    <form action="/users/faculty/mark-attendance" method="get">
                        <select class="form-select" aria-label="Default select example" name="subject">
                            <option value="TOC" selected>Computer Engineering - Sem 6 - TOC</option>
                            <option value="AJP">Computer Engineering - Sem 6 - AJP</option>
                        </select>
                        <input type="submit" value="See Student's List" class="btn btn-primary">

                    </form>

                </div>
            </div>


        </div>




    </div>

    <script>
        // Data Picker Initialization
        $('.datepicker').datepicker({
            inline: true
        });

        function myFunction(x) {
            element = $(".left-bar-for-student");
            if (element.css("display") == "none") {
                $(".navbar-dashboard-for-student").css("margin-left", "270px");
                $(".left-bar-for-student").css("display", "block");
                x.classList.toggle("change");
                $(".right-side").css("margin-left", "280px");

            } else {
                element.css("display", "none");
                $(".navbar-dashboard-for-student").css("margin-left", "0");
                $(x).removeClass("change");
                $(".right-side").css("margin-left", "10px");


            }
        }

        function change(x) {
            x.classList.toggle("change");
        }
    </script>
</body>


</html>