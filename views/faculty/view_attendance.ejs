            <div class="card">
                <div class="card-header" style="font-weight: bold;">
                    Attendance List for the selected Date
                </div>
                <div class="card-body">


                    <table class="table">
                        <thead class="table-dark">
                            <tr>
                                <th scope="col">Enrollment No.</th>
                                <th scope="col" style="width: 40%;">Subject</th>
                                <th scope="col">Class Number</th>
                            </tr>
                        </thead>


                        <% if (attendance && attendance.length> 0) { %>
                            <% attendance.forEach(function (s) {%>
                                <tr>
                                    <th scope="row">
                                        <%= s.enrollment_number %>
                                    </th>
                                    <td>
                                        <%= s.subject %>
                                    </td>
                                    <td>
                                        <%= s.class_number %>
                                    </td>

                                </tr>
                                <%});%>
                                    <% } else { %>
